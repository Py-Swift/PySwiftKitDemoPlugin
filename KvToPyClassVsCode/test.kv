<MyButton@Button>:
    text: 'Click Me'
    background_color: 0.2, 0.6, 1, 1
    font_size: 18
    size_hint: None, None
    size: 200, 50
    on_press: print(self.text)

<UserProfile>:
    orientation: 'vertical'
    spacing: 10
    padding: 20
    
    Label:
        text: 'User Profile'
        font_size: 24
        size_hint_y: None
        height: 40
    
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        
        Label:
            text: 'Name:'
            size_hint_x: 0.3
        
        TextInput:
            id: name_input
            multiline: False
    
    MyButton:
        text: 'Save Profile'
        on_press: root.save_profile()
